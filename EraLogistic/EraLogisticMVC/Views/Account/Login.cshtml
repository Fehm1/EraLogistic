<body class="double-diagonal dark auth-page">
    <!-- Preloader Starts -->
    <div class="preloader" id="preloader">
        <div class="logopreloader">
            <img src="~/assets/img/styleswitcher/logos/yellow.png" alt="logo-black">
        </div>
        <div class="loader" id="loader"></div>
    </div>
    <!-- Preloader Ends -->
    <!-- Page Wrapper Starts -->
    <div class="wrapper">
        <div class="container-fluid user-auth">
            <div class="hidden-xs col-sm-4 col-md-4 col-lg-4">
                <!-- Logo Starts -->
                <a class="logo" href="index-kenburns.html">
                    <img id="single-logo" class="img-responsive" src="~/assets/img/styleswitcher/logos/yellow.png" alt="logo">
                </a>
                <!-- Logo Ends -->
            </div>
            <div class="row">

                <div>
                    <div class="form-container">
                        <div>
                            <!-- Main Heading Starts -->
                            <div class="text-center top-text">
                                <h1><span>Login</span></h1>
                                <p>great to have you back!</p>
                            </div>
                            <!-- Main Heading Ends -->
                            <!-- Form Starts -->
                            <form class="custom-form">
                               
                                <div class="row">
                                    <div>
                                        <!-- Input Field Starts -->
                                        <div class="form-group">
                                            <input style="background-color: #343434; border:1px solid #444" class="form-control" name="email" id="email" placeholder="EMAIL" type="email" required>
                                        </div>
                                        <!-- Input Field Ends -->
                                        <!-- Input Field Starts -->
                                        <div class="form-group">
                                            <input style="background-color: #343434; border:1px solid #444" class="form-control" name="password" id="password" placeholder="PASSWORD" type="password" required>
                                        </div>
                                        <!-- Input Field Ends -->
                                    </div>
                                </div>

                                <!-- Submit Form Button Starts -->
                                <div class="form-group">
                                    <button class="custom-button login" type="submit">login</button>
                                </div>
                                <!-- Submit Form Button Ends -->
                            </form>
                            <!-- Form Ends -->

                            <br />

                            <hr style="width: 720px"/>

                            <br />

                            <!-- Main Heading Starts -->
                            <div class="text-center top-text">
                                <h1>Or <span>Register</span></h1>
                            </div>
                            <!-- Main Heading Ends -->
                            <div style="text-align: center;">
                                <a class="custom-button login" style="width: 260px" asp-controller="account" asp-action="registerforuser">Register for Member</a>
                                <a class="custom-button login" style="width: 260px" asp-controller="account" asp-action="registerforcompany">Register for Company</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Wrapper Ends -->
    <!-- Template JS Files -->
    <script src="~/assets/js/jquery-2.2.4.min.js"></script>
    <script src="~/assets/js/plugins/jquery.easing.1.3.js"></script>
    <script src="~/assets/js/plugins/bootstrap.min.js"></script>

    <!-- Live Style Switcher JS File - only demo -->
    <script src="~/assets/js/styleswitcher.js"></script>

    <!-- Main JS Initialization File -->
    <script src="~/assets/js/custom.js"></script>
</body>


