@model Entities.DTOs.AboutUsDto.AboutUsDto
@{
    ViewBag.Title = "Haqqımızda";
}

<div class="container">

    <div class="row">
        <div class="col-lg-10 col-md-12 justify-content-start">
            <h1>Haqqımızda:</h1>
        </div>

        <div class="col-lg-2 col-md-12 justify-content-end">
            <a asp-controller="aboutus" asp-action="update" asp-route-Id="@Model.AboutUs.Id" class="btn btn-warning"><span><i class="bi bi-pen-fill"></i></span> Yenilə</a>
        </div>

    </div>
    <hr style="border-top: 3px solid #bbb; border-radius: 5px;">

    <div>
        <form name="aboutUs-form" method="post">

            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>


            <div class="form-group">
                <img style="max-height: 300px; max-width: 300px; border-radius: 20px; display: block; margin-left: auto; margin-right: auto;" src="~/uploads/AboutUs/@Model.AboutUs.Image">
            </div>


            <div class="row">

                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="AboutUs.Title">Başlıq:</label>
                    <input readonly class="form-control" asp-for="AboutUs.Title" />
                </div>

                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="AboutUs.RedirectUrl">Yönləndirmə linki:</label>
                    <input readonly class="form-control" asp-for="AboutUs.RedirectUrl" />
                </div>

            </div>

            <div class="row">

                <div class="col-lg-6 col-md-12">

                    <div class="form-group">
                        <label asp-for="AboutUs.Description">Açıqlama:</label>
                        <textarea asp-for="AboutUs.Description" readonly class="form-control" rows="4">
                            @Model.AboutUs.Description
                        </textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="AboutUs.MissionDescription">Missiyamız:</label>
                        <textarea asp-for="AboutUs.MissionDescription" readonly class="form-control" rows="4">
                            @Model.AboutUs.MissionDescription
                        </textarea>
                    </div>

                </div>

                <div class="col-lg-6 col-md-12">

                    <div class="form-group">
                        <label asp-for="AboutUs.AdvantagesDescription">Üstünlüklərimiz:</label>
                        <textarea asp-for="AboutUs.AdvantagesDescription" readonly class="form-control" rows="4">
                            @Model.AboutUs.AdvantagesDescription
                        </textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="AboutUs.GuaranteedDescription">Zəmanətlərimiz:</label>
                        <textarea asp-for="AboutUs.GuaranteedDescription" readonly class="form-control" rows="4">
                            @Model.AboutUs.GuaranteedDescription
                        </textarea>
                    </div>

                </div>

            </div>

            <label>Xüsusiyyətlərimiz:</label>

            <div class="row">


                <div class="col-lg-6 col-md-12">

                    <input readonly class="form-control mb-3" asp-for="AboutUs.Feature1" />

                    <input readonly class="form-control my-3" asp-for="AboutUs.Feature2" />

                    <input readonly class="form-control my-3" asp-for="AboutUs.Feature3" />

                </div>

                <div class="col-lg-6 col-md-12">

                    <input readonly class="form-control mb-3" asp-for="AboutUs.Feature4" />

                    <input readonly class="form-control my-3" asp-for="AboutUs.Feature5" />

                    <input readonly class="form-control my-3" asp-for="AboutUs.Feature6" />

                </div>

            </div>


        </form>
    </div>
</div>
